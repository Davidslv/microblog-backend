# Environment Variables Configuration
# Copy this file to .env and update with your local values
# cp .env.example .env

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL Superuser (for running setup scripts)
# On macOS with Homebrew, this is usually your system username
# On Linux, this is usually "postgres"
# Can be overridden with: PGUSER=your_username
# PGUSER=

# Primary Database
# Note: On macOS with Homebrew PostgreSQL, use your system username (not "postgres")
# On Linux, use "postgres"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=davidslv
DATABASE_PASSWORD=

# Read Replica (for development, can use same as primary)
REPLICA_HOST=localhost
REPLICA_PORT=5432
REPLICA_USERNAME=davidslv
REPLICA_PASSWORD=

# =============================================================================
# Solid Cache Database (PostgreSQL)
# =============================================================================

CACHE_DB_HOST=localhost
CACHE_DB_PORT=5432
CACHE_DB_USERNAME=microblog_cache
CACHE_DB_PASSWORD=cache_password

# =============================================================================
# Solid Queue Database (PostgreSQL)
# =============================================================================

QUEUE_DB_HOST=localhost
QUEUE_DB_PORT=5432
QUEUE_DB_USERNAME=microblog_queue
QUEUE_DB_PASSWORD=queue_password

# =============================================================================
# Solid Cable Database (PostgreSQL)
# =============================================================================

CABLE_DB_HOST=localhost
CABLE_DB_PORT=5432
CABLE_DB_USERNAME=microblog_cable
CABLE_DB_PASSWORD=cable_password

# =============================================================================
# Rails Configuration
# =============================================================================

# Rails Master Key (required for production mode)
# Get from: config/master.key
# RAILS_MASTER_KEY=your_master_key_here

# Secret Key Base (generated automatically in development)
# SECRET_KEY_BASE=

# =============================================================================
# Application Configuration
# =============================================================================

# Rails Environment
RAILS_ENV=development

# Maximum Threads (for Puma)
RAILS_MAX_THREADS=25

# =============================================================================
# Solid Queue Configuration
# =============================================================================

# Enable Solid Queue workers in Puma (for horizontal scaling)
# Set to "true" to run workers in-process with Puma
SOLID_QUEUE_IN_PUMA=true

# =============================================================================
# Optional: Rate Limiting
# =============================================================================

# Disable Rack::Attack rate limiting (for testing)
# DISABLE_RACK_ATTACK=false

# =============================================================================
# Production Overrides (uncomment and set for production)
# =============================================================================

# For production, use strong passwords:
# CACHE_DB_PASSWORD=<generate_strong_password>
# QUEUE_DB_PASSWORD=<generate_strong_password>
# CABLE_DB_PASSWORD=<generate_strong_password>
# DATABASE_PASSWORD=<secure_production_password>
