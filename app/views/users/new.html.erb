<div class="max-w-md mx-auto mt-12 px-4">
  <h1 class="text-3xl font-bold text-gray-900 mb-6 text-center">Sign up</h1>

  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
    <%= form_with model: @user, url: users_path, local: true, class: "space-y-6" do |f| %>
      <!-- Username -->
      <div>
        <%= f.label :username, "Username",
            class: "block text-sm font-semibold text-gray-700 mb-2" %>
        <%= f.text_field :username,
            autofocus: true,
            autocomplete: "username",
            maxlength: 50,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" %>
        <small class="block mt-1 text-sm text-gray-500">Maximum 50 characters</small>
      </div>

      <!-- Password -->
      <div>
        <%= f.label :password, "Password",
            class: "block text-sm font-semibold text-gray-700 mb-2" %>
        <%= f.password_field :password,
            autocomplete: "new-password",
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" %>
        <small class="block mt-1 text-sm text-gray-500">Minimum 6 characters</small>
      </div>

      <!-- Password Confirmation -->
      <div>
        <%= f.label :password_confirmation, "Confirm Password",
            class: "block text-sm font-semibold text-gray-700 mb-2" %>
        <%= f.password_field :password_confirmation,
            autocomplete: "new-password",
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" %>
      </div>

      <!-- Actions -->
      <div class="pt-4">
        <%= f.submit "Sign up",
            class: "w-full px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-medium rounded-lg hover:from-blue-700 hover:to-indigo-700 transition-all shadow-sm hover:shadow-md transform hover:-translate-y-0.5" %>
      </div>
    <% end %>

    <div class="mt-6 text-center">
      <p class="text-sm text-gray-600">
        Already have an account?
        <%= link_to "Log in", login_path, class: "text-blue-600 hover:text-blue-700 font-medium hover:underline" %>
      </p>
    </div>
  </div>
</div>

