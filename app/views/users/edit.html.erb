<h1 class="text-3xl font-bold text-gray-900 mb-6">Settings</h1>

<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8">
  <%= form_with model: @user, url: user_path(@user), method: :patch, local: true, class: "space-y-6" do |f| %>
    <!-- Description -->
    <div>
      <%= f.label :description, "Description (max 120 characters)",
          class: "block text-sm font-semibold text-gray-700 mb-2" %>
      <%= f.text_area :description,
          maxlength: 120,
          rows: 3,
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" %>
      <small class="block mt-1 text-sm text-gray-500">Tell others about yourself</small>
    </div>

    <!-- Password -->
    <div>
      <%= f.label :password, "New Password (leave blank to keep current)",
          class: "block text-sm font-semibold text-gray-700 mb-2" %>
      <%= f.password_field :password,
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" %>
      <small class="block mt-1 text-sm text-gray-500">Minimum 6 characters</small>
    </div>

    <!-- Password Confirmation -->
    <div>
      <%= f.label :password_confirmation, "Confirm New Password",
          class: "block text-sm font-semibold text-gray-700 mb-2" %>
      <%= f.password_field :password_confirmation,
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all" %>
    </div>

    <!-- Actions -->
    <div class="flex gap-4 pt-4">
      <%= f.submit "Update Settings",
          class: "px-6 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-medium rounded-lg hover:from-blue-700 hover:to-indigo-700 transition-all shadow-sm hover:shadow-md transform hover:-translate-y-0.5" %>
      <%= link_to "Cancel", user_path(@user),
          class: "px-6 py-2 bg-gray-100 text-gray-700 font-medium rounded-lg hover:bg-gray-200 transition-all shadow-sm hover:shadow-md" %>
    </div>
  <% end %>

  <hr class="my-8 border-gray-200">

  <!-- Danger Zone -->
  <div class="bg-red-50 border border-red-200 rounded-lg p-6">
    <h2 class="text-xl font-bold text-red-900 mb-2">Danger Zone</h2>
    <p class="text-red-800 mb-4">
      Once you delete your account, there is no going back. Your posts will remain but will show as "Deleted User".
    </p>
    <%= button_to "Delete Account", user_path(@user),
        method: :delete,
        data: { confirm: "Are you sure you want to delete your account? This action cannot be undone." },
        class: "px-6 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition-all shadow-sm hover:shadow-md" %>
  </div>
</div>
