<h1>Settings</h1>

<div class="settings-form">
  <%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>
    <div class="form-group">
      <%= f.label :description, "Description (max 120 characters)" %>
      <%= f.text_area :description, maxlength: 120, rows: 3, class: "form-control" %>
      <small class="form-help">Tell others about yourself</small>
    </div>

    <div class="form-group">
      <%= f.label :password, "New Password (leave blank to keep current)" %>
      <%= f.password_field :password, class: "form-control" %>
      <small class="form-help">Minimum 6 characters</small>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm New Password" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Update Settings", class: "btn btn-primary" %>
      <%= link_to "Cancel", user_path(@user), class: "btn btn-secondary" %>
    </div>
  <% end %>

  <hr class="divider">

  <div class="danger-zone">
    <h2>Danger Zone</h2>
    <p>Once you delete your account, there is no going back. Your posts will remain but will show as "Deleted User".</p>
    <%= button_to "Delete Account", user_path(@user), method: :delete,
        data: { confirm: "Are you sure you want to delete your account? This action cannot be undone." },
        class: "btn btn-danger" %>
  </div>
</div>

