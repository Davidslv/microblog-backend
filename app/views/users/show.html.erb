<!-- User Profile Header -->
<div class="border-b border-gray-200 pb-6">
  <div class="px-4 pt-4">
    <h1 class="text-2xl font-bold text-gray-900 mb-2"><%= @user.username %></h1>

    <% if @user.description.present? %>
      <p class="text-gray-600 mb-4 leading-relaxed"><%= @user.description %></p>
    <% end %>

    <!-- Stats -->
    <div class="flex gap-6 text-sm">
      <div class="flex items-center gap-1">
        <span class="font-bold text-gray-900"><%= @user.posts_count %></span>
        <span class="text-gray-500">Posts</span>
      </div>
      <div class="flex items-center gap-1">
        <span class="font-bold text-gray-900"><%= @followers_count %></span>
        <span class="text-gray-500">Followers</span>
      </div>
      <div class="flex items-center gap-1">
        <span class="font-bold text-gray-900"><%= @following_count %></span>
        <span class="text-gray-500">Following</span>
      </div>
    </div>

    <!-- Follow Button -->
    <% if logged_in? && current_user != @user %>
      <div class="mt-4">
        <% if current_user.following?(@user) %>
          <%= button_to "Unfollow", follow_path(@user), method: :delete,
              class: "px-6 py-2 bg-black text-white font-bold rounded-full hover:bg-gray-800 transition-colors" %>
        <% else %>
          <%= button_to "Follow", follow_path(@user), method: :post,
              class: "px-6 py-2 bg-black text-white font-bold rounded-full hover:bg-gray-800 transition-colors" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- User Posts -->
<div class="divide-y divide-gray-200">
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <%= render 'posts/post', post: post %>
    <% end %>

    <% if @has_next %>
      <div class="flex justify-center py-8">
        <%= link_to "Load More", user_path(@user, cursor: @next_cursor),
            class: "px-6 py-2 text-blue-600 hover:bg-blue-50 font-medium rounded-full transition-colors" %>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-16 px-4">
      <p class="text-gray-500 text-lg">No posts yet.</p>
    </div>
  <% end %>
</div>
