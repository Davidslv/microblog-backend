<article class="border-b border-gray-200 hover:bg-gray-50 transition-colors px-4 py-3 cursor-pointer" id="post-<%= post.id %>">
  <div class="flex gap-3">
    <!-- Avatar Circle -->
    <div class="flex-shrink-0">
      <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center text-white font-bold text-lg">
        <% if post.author_id %>
          <%= post.author_name.first.upcase %>
        <% else %>
          <span class="text-gray-400">?</span>
        <% end %>
      </div>
    </div>

    <!-- Post Content -->
    <div class="flex-1 min-w-0">
      <!-- Header -->
      <div class="flex items-center gap-2 mb-1">
        <% if post.author_id %>
          <%= link_to user_path(post.author_id), class: "hover:underline" do %>
            <span class="font-bold text-gray-900 hover:text-blue-600 transition-colors">
              <%= post.author_name %>
            </span>
          <% end %>
        <% else %>
          <span class="font-bold text-gray-900"><%= post.author_name %></span>
        <% end %>
        <span class="text-gray-500 text-sm">·</span>
        <span class="text-gray-500 text-sm hover:underline">
          <%= time_ago_in_words(post.created_at) %> ago
        </span>
        <% if post.parent %>
          <span class="text-gray-500 text-sm">·</span>
          <span class="text-gray-500 text-sm">
            Replying to <%= link_to "@#{post.parent.author&.username || 'deleted'}", post_path(post.parent), class: "text-blue-600 hover:underline" %>
          </span>
        <% end %>
      </div>

      <!-- Post Text -->
      <div class="text-gray-900 text-[15px] leading-6 mb-3 break-words whitespace-pre-wrap">
        <%= simple_format(post.content, {}, wrapper_tag: "div", class: "mb-0") %>
      </div>

      <!-- Actions -->
      <div class="flex items-center gap-8 text-gray-500 text-sm">
        <% if post.parent %>
          <div class="flex items-center gap-2 hover:text-blue-600 transition-colors group">
            <svg class="w-5 h-5 group-hover:bg-blue-100 rounded-full p-1 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/>
            </svg>
            <span>Reply</span>
          </div>
        <% else %>
          <% if logged_in? %>
            <%= link_to post_path(post), class: "flex items-center gap-2 hover:text-blue-600 transition-colors group" do %>
              <svg class="w-5 h-5 group-hover:bg-blue-100 rounded-full p-1 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
              </svg>
              <span><%= post.replies.count %></span>
            <% end %>
          <% else %>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
              </svg>
              <span><%= post.replies.count %></span>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</article>
