<h1 class="text-3xl font-bold text-gray-900 mb-6">Timeline</h1>

<% if logged_in? %>
  <!-- Filter Tabs -->
  <div class="flex gap-2 mb-6 border-b border-gray-200 overflow-x-auto">
    <%= link_to "My Timeline", posts_path(filter: 'timeline'),
        class: "px-4 py-2 text-sm font-medium border-b-2 transition-colors #{'border-blue-600 text-blue-600' if @filter == 'timeline'} #{'border-transparent text-gray-500 hover:text-gray-700' unless @filter == 'timeline'}" %>
    <%= link_to "My Posts", posts_path(filter: 'mine'),
        class: "px-4 py-2 text-sm font-medium border-b-2 transition-colors #{'border-blue-600 text-blue-600' if @filter == 'mine'} #{'border-transparent text-gray-500 hover:text-gray-700' unless @filter == 'mine'}" %>
    <%= link_to "Following", posts_path(filter: 'following'),
        class: "px-4 py-2 text-sm font-medium border-b-2 transition-colors #{'border-blue-600 text-blue-600' if @filter == 'following'} #{'border-transparent text-gray-500 hover:text-gray-700' unless @filter == 'following'}" %>
  </div>

  <!-- Post Form -->
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6" data-controller="character-counter">
    <%= form_with model: @post, url: posts_path, local: true, class: "space-y-4" do |f| %>
      <%= f.text_area :content,
          placeholder: "What's on your mind? (max 200 characters)",
          maxlength: 200,
          rows: 3,
          class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 resize-none transition-all",
          data: { character_counter_target: "input" } %>
      <div class="flex justify-between items-center">
        <span class="text-sm text-gray-500">
          <span data-character-counter-target="counter" class="font-medium">0</span>/200
        </span>
        <%= f.submit "Post",
            class: "px-6 py-2 bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-medium rounded-lg hover:from-blue-700 hover:to-indigo-700 transition-all shadow-sm hover:shadow-md transform hover:-translate-y-0.5" %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="bg-blue-50 border border-blue-200 text-blue-800 px-4 py-3 rounded-lg mb-6">
    <p>You're viewing public posts. Log in to see your personalized timeline.</p>
  </div>
<% end %>

<!-- Posts List -->
<div class="space-y-4">
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <%= render 'posts/post', post: post %>
    <% end %>

    <% if @has_next %>
      <div class="flex justify-center pt-6">
        <%= link_to "Load More", posts_path(filter: @filter, cursor: @next_cursor),
            class: "px-6 py-2 bg-white border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 hover:border-gray-400 transition-all shadow-sm hover:shadow-md" %>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-12 bg-white rounded-xl shadow-sm border border-gray-200">
      <p class="text-gray-500 text-lg">
        No posts yet. <%= "Be the first to post!" if !logged_in? %>
      </p>
    </div>
  <% end %>
</div>
