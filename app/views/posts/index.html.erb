<h1 class="text-2xl font-bold text-gray-900 mb-6 px-4">Home</h1>

<% if logged_in? %>
  <!-- Filter Tabs -->
  <div class="flex border-b border-gray-200 overflow-x-auto sticky top-16 bg-white z-40">
    <%= link_to "For You", posts_path(filter: 'timeline'),
        class: "flex-1 px-4 py-4 text-center text-sm font-semibold border-b-2 transition-colors #{'border-blue-600 text-gray-900' if @filter == 'timeline'} #{'border-transparent text-gray-500 hover:text-gray-700 hover:bg-gray-50' unless @filter == 'timeline'}" %>
    <%= link_to "Following", posts_path(filter: 'following'),
        class: "flex-1 px-4 py-4 text-center text-sm font-semibold border-b-2 transition-colors #{'border-blue-600 text-gray-900' if @filter == 'following'} #{'border-transparent text-gray-500 hover:text-gray-700 hover:bg-gray-50' unless @filter == 'following'}" %>
    <%= link_to "My Posts", posts_path(filter: 'mine'),
        class: "flex-1 px-4 py-4 text-center text-sm font-semibold border-b-2 transition-colors #{'border-blue-600 text-gray-900' if @filter == 'mine'} #{'border-transparent text-gray-500 hover:text-gray-700 hover:bg-gray-50' unless @filter == 'mine'}" %>
  </div>

  <!-- Post Form -->
  <div class="border-b border-gray-200 px-4 py-3" data-controller="character-counter">
    <div class="flex gap-3">
      <!-- Avatar -->
      <div class="flex-shrink-0">
        <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 to-indigo-600 flex items-center justify-center text-white font-bold text-lg">
          <%= current_user.username.first.upcase %>
        </div>
      </div>

      <!-- Form -->
      <div class="flex-1">
        <%= form_with model: @post, url: posts_path, local: true, class: "space-y-3" do |f| %>
          <%= f.text_area :content,
              placeholder: "What's happening?",
              maxlength: 200,
              rows: 3,
              class: "w-full text-xl text-gray-900 placeholder-gray-500 border-0 resize-none focus:ring-0 focus:outline-none",
              data: { character_counter_target: "input" } %>
          <div class="flex justify-between items-center pt-3 border-t border-gray-200">
            <span class="text-sm text-gray-500">
              <span data-character-counter-target="counter" class="font-medium">0</span>/200
            </span>
            <%= f.submit "Post",
                class: "px-6 py-2 bg-black text-white font-bold rounded-full hover:bg-gray-800 transition-colors disabled:opacity-50 disabled:cursor-not-allowed" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div class="border-b border-gray-200 px-4 py-4">
    <div class="bg-blue-50 border border-blue-200 text-blue-800 px-4 py-3 rounded-lg">
      <p class="text-sm">You're viewing public posts. Log in to see your personalized timeline.</p>
    </div>
  </div>
<% end %>

<!-- Posts List -->
<div class="divide-y divide-gray-200">
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <%= render 'posts/post', post: post %>
    <% end %>

    <% if @has_next %>
      <div class="flex justify-center py-8">
        <%= link_to "Load More", posts_path(filter: @filter, cursor: @next_cursor),
            class: "px-6 py-2 text-blue-600 hover:bg-blue-50 font-medium rounded-full transition-colors" %>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-16 px-4">
      <p class="text-gray-500 text-lg">
        No posts yet. <%= "Be the first to post!" if !logged_in? %>
      </p>
    </div>
  <% end %>
</div>
